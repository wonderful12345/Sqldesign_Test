<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_week_plan_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.asus.sqldesign_test.activity_set.User_week_plan_table">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar_week_plan_table"
        android:background="@color/night_mode"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/iv_return_week_plan_table"
            android:background="@drawable/return_btn"
            android:layout_height="35dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="21sp"
            android:text="用户计划表"
            android:id="@+id/tv_content_plan_title"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_week_plan_table"
        android:orientation="horizontal"
        android:id="@+id/linear_week_plan_table"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="周数"
            android:padding="2dp"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:background="@drawable/edittext_style"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="星期"
            android:padding="2dp"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:background="@drawable/edittext_style"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="2dp"
            android:gravity="center"
            android:text="计划内容"
            android:textColor="#000"
            android:background="@drawable/edittext_style"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/linear_week_plan_table"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView

            android:layout_width="match_parent"
            android:id="@+id/recycler_week_plan_table"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>
</RelativeLayout>
